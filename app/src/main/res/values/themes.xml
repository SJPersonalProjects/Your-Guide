<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YourGuide" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.YourGuide" parent="Base.Theme.YourGuide" />


    <!-- activity_main.xml Data.-->
    <!-- Main heading at the top of the activity. -->
    <style name="MainActivityHeadingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Sub-heading at the top of the activity. -->
    <style name="MainActivitySubHeadingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Main activity listview to contain the list of provinces. -->
    <style name="MainActivityListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>


    
    <!-- province_list.xml Data. -->
    <!-- CardView that contains the information about Provinces (Sindh, Balochistan, KPK, Punjab). -->
    <style name="ProvinceCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">32dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    <!-- Thumbnail image view for the province list (Sindh, Balochistan, KPK, Punjab). -->
    <style name="ProvinceCardThumbnailImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">55</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- Title for the province list (Sindh, Balochistan, KPK, Punjab). -->
    <style name="ProvinceCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Description for the province list (Sindh, Balochistan, KPK, Punjab). -->
    <style name="ProvinceCardDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Province bottom data container root view to show the numbers of the following options:
        1. Historical Sights
        2. Cities
        3. Restaurants -->
    <style name="ProvinceBottomDataContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">10</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- Data to show the actual number collected from the province category card items. -->
    <style name="NumberOfPlaces">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/data_circle</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Text as a right side heading to represent data. -->
    <style name="PlacesTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- province_category_list_item.xml data. -->
    <!-- Preview image for the card. -->
    <style name="ProvinceCategoryListItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- Title for the card. -->
    <style name="ProvinceCategoryListItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Description for the card. -->
    <style name="ProvinceCategoryListItemDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Province list item bottom data container. -->
    <style name="ProvinceCategoryListItemBottomDataContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- Province list item bottom rating star image. -->
    <style name="ProvinceCategoryListItemRatingStarImage">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- Province list item bottom rating. -->
    <style name="ProvinceCategoryListItemRating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Province list item bottom review. -->
    <style name="ProvinceCategoryListItemReview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Province list item bottom heart image. -->
    <style name="ProvinceCategoryListItemHeartImage">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>



    <!-- Header image style for each province activity. -->
    <style name="ProvinceHeaderImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/province_header_image_height</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ProvinceListCategoryHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/punjab_province_list_heading_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProvinceListSeeAllHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:textColor">@color/province_heading_see_all</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListCategoryHeaderRootView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProvinceCategoryRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">none</item>
    </style>
    
    <!-- Category card Themes. -->
    <style name="CategoryPreviewImageImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">288dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CategoryParentBottomRelativeLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">588dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/rounded_from_top</item>
    </style>

    <!-- Title of the category theme. -->
    <style name="CategoryHeadingTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">7</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategorySubHeadingTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryAddressTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="CategoryReviewTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryRatingTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryRatingImageTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:src">@drawable/baseline_star_24</item>
    </style>


    <style name="CategoryIconQuestionTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- LinearLayout theme for all the horizontal icons in the layout. -->
    <style name="CategoryIconsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- LinearLayout theme for single icon in the parent LinearLayout. -->
    <style name="CategorySingleIconLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Icon in the city layouts. -->
    <style name="CategoryIconTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/data_circle</item>
        <item name="android:backgroundTint">#F4F4F4</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Text below the icons in the city layouts. -->
    <style name="CategoryIconTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Description heading below icons horizontal list of LinearLayout. -->
    <style name="CategoryDescriptionHeadingTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Long description theme used to explain city, restaurants, historical place. -->
    <style name="CategoryDescriptionTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- See the Location button theme to see the actual location of any place. -->
    <style name="CategorySeeLocationButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">#0098FB</item>
    </style>




    <!-- Specifically restaurant layout styles. -->
    <!-- Open In heading for the timing of the restaurant. -->
    <style name="CategoryOpenInHeadingTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Timing of the restaurant opening and closing TextView. -->
    <style name="CategoryRestaurantTimingTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button for booking a table in restaurant. -->
    <style name="CategoryBookATableButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">#0098FB</item>
    </style>


</resources>