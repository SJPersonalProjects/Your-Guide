<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".province_cards_categories.HistoricalPlaceActivity">

    <!-- Top preview image. -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/lahore_fort"/>

    <!-- Parent bottom RelativeLayout with top sides rounded. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_from_top">

        <!-- Historical Place name heading. -->
        <TextView
            android:id="@+id/historical_place_name"
            style="@style/CategoryHeadingTheme"
            android:text="@string/punjab_historical_place_one_title"
            android:layout_marginTop="28dp"/>

        <!-- Attractive words below the historical place name heading. -->
        <TextView
            android:id="@+id/historical_place_sub_heading"
            style="@style/CategorySubHeadingTheme"
            android:layout_below="@id/historical_place_name"
            android:text="@string/experience"/>

        <!-- Address of the historical place in Pakistan. -->
        <TextView
            android:id="@+id/historical_place_address"
            style="@style/CategoryAddressTheme"
            android:layout_below="@id/historical_place_sub_heading"
            android:text="@string/lahore_city_address"/>

        <!-- Review of the historical place. -->
        <TextView
            android:id="@+id/historical_place_review"
            style="@style/CategoryReviewTheme"
            android:text="@string/punjab_city_one_review"/>

        <!-- Rating of the historical place. -->
        <TextView
            android:id="@+id/historical_place_rating"
            style="@style/CategoryRatingTheme"
            android:layout_toStartOf="@id/historical_place_review"
            android:text="@string/punjab_city_one_rating"/>

        <!-- Rating star image of the historical place. -->
        <ImageView
            android:id="@+id/rating_star"
            style="@style/CategoryRatingImageTheme"
            android:layout_toStartOf="@id/historical_place_rating"
            android:contentDescription="@string/todo"/>

        <!-- Question above the horizontal icons LinearLayout. -->
        <TextView
            android:id="@+id/historical_place_icon_question"
            style="@style/CategoryIconQuestionTheme"
            android:layout_below="@id/historical_place_address"
            android:layout_marginTop="28dp"
            android:text="@string/what_would_you_like_to_do"/>

        <!-- Horizontal LinearLayout for icons. -->
        <LinearLayout
            android:id="@+id/icons_linear_layout"
            style="@style/CategoryIconsLinearLayout"
            android:layout_below="@id/historical_place_icon_question">

            <!-- Image and title for Icon one LinearLayout. -->
            <LinearLayout
                android:id="@+id/icon_one"
                style="@style/CategorySingleIconLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <!-- Image for icon one. -->
                <ImageView
                    android:id="@+id/icon_one_image"
                    style="@style/CategoryIconTheme"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/baseline_airplanemode_active_24"/>

                <!-- Title for icon one. -->
                <TextView
                    android:id="@+id/icon_one_title"
                    style="@style/CategoryIconTextTheme"
                    android:text="@string/travel"/>
            </LinearLayout>

            <!-- Image and title for icon two LinearLayout. -->
            <LinearLayout
                android:id="@+id/icon_two"
                style="@style/CategorySingleIconLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <!-- Image for icon two. -->
                <ImageView
                    android:id="@+id/icon_two_image"
                    style="@style/CategoryIconTheme"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/baseline_airplanemode_active_24"/>

                <!-- Title for icon two. -->
                <TextView
                    android:id="@+id/icon_two_title"
                    style="@style/CategoryIconTextTheme"
                    android:text="@string/travel"/>
            </LinearLayout>

            <!-- Image and title for icon three LinearLayout. -->
            <LinearLayout
                android:id="@+id/icon_three"
                style="@style/CategorySingleIconLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <!-- Image for icon three. -->
                <ImageView
                    android:id="@+id/icon_three_image"
                    style="@style/CategoryIconTheme"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/baseline_airplanemode_active_24"/>

                <!-- Title for icon three. -->
                <TextView
                    android:id="@+id/icon_three_title"
                    style="@style/CategoryIconTextTheme"
                    android:text="@string/travel"/>
            </LinearLayout>

            <!-- Image and title for icon four LinearLayout. -->
            <LinearLayout
                android:id="@+id/icon_four"
                style="@style/CategorySingleIconLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <!-- Image for icon four. -->
                <ImageView
                    android:id="@+id/icon_four_image"
                    style="@style/CategoryIconTheme"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/baseline_airplanemode_active_24"/>

                <!-- Title for icon four. -->
                <TextView
                    android:id="@+id/icon_four_title"
                    style="@style/CategoryIconTextTheme"
                    android:text="@string/travel"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Description heading for long description. -->
        <TextView
            android:id="@+id/historical_place_description_heading"
            style="@style/CategoryDescriptionHeadingTheme"
            android:layout_below="@id/icons_linear_layout"
            android:text="@string/description"/>

        <!-- Long description for the historical place. -->
        <TextView
            android:id="@+id/historical_place_description"
            style="@style/CategoryDescriptionTheme"
            android:layout_below="@id/historical_place_description_heading"
            android:text="@string/punjab_city_one_description"/>

        <!-- Button to see the location. -->
        <Button
            android:id="@+id/historical_place_see_the_location_button"
            style="@style/CategorySeeLocationButtonTheme"
            android:text="@string/see_the_location"/>
    </RelativeLayout>
</RelativeLayout>